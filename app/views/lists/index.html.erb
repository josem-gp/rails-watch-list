<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "cinema.jpeg", alt: "Cinema"%>);">
  <div class="container ">
    <h1>CHILL CINEMA</h1>
    <p>To relieve all your stress from coding</p>
  </div>
</div>

<div class="container">
  <div class="list-header">
    <h2>All Lists</h2>
    <%= link_to new_list_path do %>
      <i class="fas fa-plus-square"></i>
    <% end %>
  </div>
  <div class="lists">
      <% @lists.each do |list| %>
        <div class="list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <h3><%= link_to list.name, list_path(list), class: 'list-link' %></h3>
        </div>
      <% end %>
  </div>
</div>
